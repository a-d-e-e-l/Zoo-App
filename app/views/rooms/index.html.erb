<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Area</th>
      <th>Type</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.name %></td>
        <td><%= room.area %></td>
        <td><%= room.room_type %></td>
        <td><%= room.description %></td>
        <td><%= link_to "Show", room,class:"btn btn-success" %></td>
        <td><%= link_to "Edit", edit_room_path(room),class:"btn btn-warning" %></td>
        <td><%= link_to "Destroy", room, method: :delete,class:"btn btn-danger", data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New Room", new_room_path,class:"btn btn-secondary" %>
